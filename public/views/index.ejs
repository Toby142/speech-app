    <style>
      body {
        background-color: white;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
       
      }

      html{
        overflow-y: hidden;
        overflow-x: hidden;
      }
      .container {
        width: 100vw;
        height: 100vh;
      }
      .container video {
        width: max-content;
        height: max-content;
        position: relative;
        z-index: 0;
      }
      .float-container {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        height: 100%;
        width: 100%;
        display: flex;
        align-items: end;
        justify-content: center;
      }
      video {
        width: 100%;
        min-height: 100%;
        object-fit: cover; /* Behoudt de aspectverhouding en vult het beschikbare gebied */
        z-index: 1;
      }

      @media (min-aspect-ratio: 16/9) {
        video {
          width: 100%;
          height: auto;
        }
      }
      @media (max-aspect-ratio: 16/9) {
        video {
          width: 100%;
          height: 100%;

          padding: 0;
        }
      }

      .float-btn-ctn {
        display: flex;
        flex-direction: row;
        background-color:rgba(0, 0, 0, .60);
        position: absolute;
        bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  border-radius: 60px;
  padding: 20px;
  gap: 20px;
      }

      #video-container {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
	overflow: hidden;
}
#video {
    height: 100vh;
}
